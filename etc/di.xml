<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Hawksama\Notice\Api\NoticeRepositoryInterface" type="Hawksama\Notice\Model\NoticeRepository" />
    <preference for="Hawksama\Notice\Api\Data\NoticeSearchResultsInterface"
                type="Hawksama\Notice\Model\NoticeSearchResults" />

    <preference for="Hawksama\Notice\Api\Data\NoticeInterface" type="Hawksama\Notice\Model\Notice"/>

    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="Hawksama\Notice\Api\Data\NoticeInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">hawksama_notice</item>
                    <item name="identifierField" xsi:type="string">notice_id</item>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\EntityManager\Operation\ExtensionPool">
        <arguments>
            <argument name="extensionActions" xsi:type="array">
                <item name="Hawksama\Notice\Api\Data\NoticeInterface" xsi:type="array">
                    <item name="read" xsi:type="array">
                        <item name="storeReader" xsi:type="string">Hawksama\Notice\Model\ResourceModel\Notice\Relation\Store\ReadHandler</item>
                    </item>
                    <item name="create" xsi:type="array">
                        <item name="storeCreator" xsi:type="string">Hawksama\Notice\Model\ResourceModel\Notice\Relation\Store\SaveHandler</item>
                    </item>
                    <item name="update" xsi:type="array">
                        <item name="storeUpdater" xsi:type="string">Hawksama\Notice\Model\ResourceModel\Notice\Relation\Store\SaveHandler</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </type>


    <type name="Magento\Framework\Model\Entity\RepositoryFactory">
        <arguments>
            <argument name="entities" xsi:type="array">
                <item name="Hawksama\Notice\Api\Data\NoticeInterface" xsi:type="string">Hawksama\Notice\Api\NoticeRepositoryInterface</item>
            </argument>
        </arguments>
    </type>


    <virtualType name="Hawksama\Notice\Model\Api\SearchCriteria\CollectionProcessor\NoticeFilterProcessor" type="Magento\Framework\Api\SearchCriteria\CollectionProcessor\FilterProcessor">
        <arguments>
            <argument name="customFilters" xsi:type="array">
                <item name="store_id" xsi:type="object">Hawksama\Notice\Model\Api\SearchCriteria\CollectionProcessor\FilterProcessor\StoreFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Hawksama\Notice\Model\Api\SearchCriteria\NoticeCollectionProcessor" type="Magento\Framework\Api\SearchCriteria\CollectionProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="filters" xsi:type="object">Hawksama\Notice\Model\Api\SearchCriteria\CollectionProcessor\NoticeFilterProcessor</item>
                <item name="sorting" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\SortingProcessor</item>
                <item name="pagination" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\PaginationProcessor</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="Hawksama\Notice\Api\Data\NoticeInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
            </argument>
        </arguments>
    </type>
    <type name="Hawksama\Notice\Model\NoticeRepository">
        <arguments>
            <argument name="collectionProcessor" xsi:type="object">Hawksama\Notice\Model\Api\SearchCriteria\NoticeCollectionProcessor</argument>
            <argument name="hydrator" xsi:type="object">Magento\Framework\EntityManager\AbstractModelHydrator</argument>
        </arguments>
    </type>
</config>
